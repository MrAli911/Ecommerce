@model Ecommerce.Areas.Admin.Controllers.AdminAuth
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<h2>Login</h2>


<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-area="Admin" asp-controller="DashBoard" asp-action="Adminlogin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="username" class="control-label"></label>
                    <input asp-for="username" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" class="form-control" />

                </div>
                <div class="form-check-inline">
                    <label class="form-check-label" asp-for="RememberMe">remmeber me</label>
                    <input class="form-check-input" asp-for="RememberMe" />
                </div>
                <div class="form-group">
                    <input type="submit" asp-route="Dashboard" asp-action="index" value="Login" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
